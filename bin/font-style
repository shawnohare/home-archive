#!/usr/bin/env bash

echo "Printing ligatures."
ligs=(
  'www'
  '<*'
  '<*>'
  '<+>'
  '<$>'
  '***'
  '<|'
  '|>'
  '<|>'
  '!!'
  '||'
  '==='
  '==>'
  '<<<'
  '>>>'
  '<>'
  '+++'
  '<-'
  '->'
  '=>'
  '>>'
  '<<'
  '>>='
  '=<<'
  '..'
  '...'
  '::'
  '-<'
  '>-'
  '-<<'
  '>>-'
  '++'
  '/='
  '=='
  '!='
)
for lig in "${ligs[@]}"; do
    echo "${lig}"
done

echo "Printing styilzed text."
echo -e "\e[1mbold\e[0m"
echo -e "\e[3mitalic\e[0m"
echo -e "\e[4munderline\e[0m"
echo -e "\e[9mstrikethrough\e[0m"
